<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BookNest.Views.Admin.AdminMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BookNest.Views.Admin"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Books"
            ContentTemplate="{DataTemplate views:Books}"
            Route="ManageBooks" />
        <ShellContent
            Title="Authors"
            ContentTemplate="{DataTemplate views:ManageAuthors}"
            Route="ManageAuthors" />
        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate views:ManageCategories}"
            Route="ManageCategories" />
    </TabBar>
   


</Shell>